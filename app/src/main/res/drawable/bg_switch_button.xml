<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true" >
        <shape >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/colorIcon" />
            <solid android:color="@color/colorPrimaryDark"/>
            <padding android:bottom="2dp"
                android:left="3dp"
                android:right="1dp"
                android:top="2dp"/>
        </shape>
    </item>
    <item >
        <shape >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/colorWhiteTransparent" />
            <solid android:color="@color/colorPrimaryDark"/>
            <padding android:bottom="2dp"
                android:left="3dp"
                android:right="1dp"
                android:top="2dp"/>
        </shape>
    </item>
</selector>